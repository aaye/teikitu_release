/* ---- tgMSVC_IMPL__BUILTIN_CTZ ------------------------------------------------------------------------------------------------------------------------------------------------- */
/* ------------------------------------------------------------------------------------------------------------------------------------------------------------------------------- */
TgINLINE TgSINT_F08 tgMSVC_IMPL__BUILTIN_CTZ( TgUINT_F32_C ARG )
{
    TgUINT_F32                          iRet;
    TgBOOL                              bFound;

    bFound = _BitScanForward( (unsigned long*)&iRet, ARG ) != 0 ? true : false;
    return (bFound ? (TgSINT_F08)iRet : 0);
}


